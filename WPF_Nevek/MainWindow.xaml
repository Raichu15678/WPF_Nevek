<Window x:Class="WPF_Nevek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Nevek"
        mc:Ignorable="d"
        Title="Nevekszortirozzása" Height="450" Width="400">
    <Grid Background="#FFC8C8C8">
        
        <Label Content="Keresztnevek, elválasztva"
               Width="auto"
               Height="auto"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="20 20 0 0"
               FontSize="16"
               FontWeight="DemiBold"/>
        <TextBox x:Name="tbx_nevekbeir"
                 Width="360"
                 Height="auto"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="20 50 0 0"
                 FontSize="16"/>
        <ListBox x:Name="lb_nevekkiir"
                 Width="120"
                 Height="300"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Margin="20 80 0 0"
                 SelectionMode="Single"/>
        
        <ListBox x:Name="lb_nevekrendezve"
                 Width="120"
                 Height="300"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Right"
                 Margin="0 80 20 0"
                 SelectionMode="Single"/>

        <Button x:Name="btn_nevekkiir"
                Content="Szavakra bontás"
                Width="140"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20 390 0 0"
                FontSize="16"
                Click="btn_nevekkiir_Click"
                />
        <Button x:Name="btn_rendez"
                Content="Rendez"
                Width="70"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0 390 70 0"
                FontSize="16"
                Click="btn_rendez_Click"/>
    </Grid>
</Window>
